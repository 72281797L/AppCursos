<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bordes_redondeados"
    tools:context=".actividades.EditarAlumnoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_edit_nombreAlumno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:hint="@string/nombreAlumno"
                android:layout_margin="10dp"
                android:inputType="text"
                android:textColor="@color/colorSecundaryText"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-8dp" />

            <EditText
                android:id="@+id/et_edit_apellidosAlumno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/apellidosAlumno"
                android:layout_margin="10dp"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColor="@color/colorSecundaryText"
                app:layout_constraintTop_toBottomOf="@+id/et_edit_nombreAlumno"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-8dp" />

            <EditText
                android:id="@+id/et_edit_dniAlumno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dniAlumno"
                android:layout_margin="10dp"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColor="@color/colorSecundaryText"
                app:layout_constraintTop_toBottomOf="@+id/et_edit_apellidosAlumno"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-8dp" />

            <EditText
                android:id="@+id/et_edit_telefonoAlumno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/telefonoAlumno"
                android:layout_margin="10dp"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColor="@color/colorSecundaryText"
                app:layout_constraintTop_toBottomOf="@+id/et_edit_dniAlumno"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-8dp" />

            <Spinner
                android:id="@+id/spinner_edit_asignaturaId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:hint="@string/seleccionar_asignatura"
                android:textColor="@color/colorSecundaryText"
                app:layout_constraintTop_toBottomOf="@+id/et_edit_telefonoAlumno"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="1dp" />

            <Button
                android:id="@+id/btn_edit_editarAlumno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondeados"
                android:textColor="@color/icons"
                android:text="@string/editar"
                android:layout_margin="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner_edit_asignaturaId"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="25dp" />

            <Button
                android:id="@+id/btn_edit_cancelarAlumno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondeados"
                android:text="@string/cancelar"
                android:textColor="@color/icons"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/btn_edit_editarAlumno"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="540dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>