<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bordes_redondeados"
    tools:context=".actividades.NuevaRutaActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtLatIni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/latitudInicial"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/colorSecundaryText"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/txtLongIni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/longitudInicial"
                android:layout_weight="1"
                android:layout_marginTop="7dp"
                android:layout_margin="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                tools:ignore="Autofill,TextFields" />

            <EditText
                android:id="@+id/txtLatFin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/latitudFinal"
                android:onClick="onClick"
                android:layout_margin="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/colorSecundaryText"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                tools:ignore="Autofill" />

            <EditText
                android:id="@+id/txtLongFin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/longitudFinal"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/colorSecundaryText"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                tools:ignore="Autofill" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/obtener"
                android:background="@drawable/boton_redondeados"
                android:textColor="@color/icons"
                android:textSize="20sp"
                android:id="@+id/btn_obtenerCoordenadas"
                android:onClick="onClick"
                android:layout_margin="10dp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>