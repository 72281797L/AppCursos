<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".actividades.NuevoUsuarioActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_nombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:hint="@string/nombreUsuario"
                android:inputType="text"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-8dp" />

            <EditText
                android:id="@+id/et_apellidosProfesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/apellidosProfesor"
                android:importantForAutofill="no"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@+id/et_nombreProfesor"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-8dp" />

            <EditText
                android:id="@+id/et_departamentoProfesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/departamentoProfesor"
                android:importantForAutofill="no"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@+id/et_apellidosProfesor"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-8dp" />

            <EditText
                android:id="@+id/et_telefonoProfesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/telefonoProfesor"
                android:importantForAutofill="no"
                android:inputType="text"
                app:layout_constraintTop_toBottomOf="@+id/et_departamentoProfesor"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-8dp" />

            <Spinner
                android:id="@+id/spinner_profesorAsignatura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/et_telefonoProfesor"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="1dp" />

            <Button
                android:id="@+id/alta_profesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:textColor="@color/blanco"
                android:text="@string/alta"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/spinner_profesorAsignatura"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="25dp" />

            <Button
                android:id="@+id/buscar_profesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:textColor="@color/blanco"
                android:text="@string/buscar"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/alta_profesor"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="25dp" />

            <Button
                android:id="@+id/eliminar_profesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="@string/eliminar"
                android:layout_margin="10dp"
                android:textColor="@color/blanco"
                app:layout_constraintTop_toBottomOf="@+id/buscar_profesor"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="540dp" />

            <Button
                android:id="@+id/editar_profesor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="@string/editar"
                android:textColor="@color/blanco"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/eliminar_profesor"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="540dp" />

            <Button
                android:id="@+id/cancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="@string/cancelar"
                android:textColor="@color/blanco"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@+id/editar_profesor"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="540dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>