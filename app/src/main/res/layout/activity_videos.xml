<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".actividades.VideosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_label1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_presentacion"
                android:textColor="@color/colorPrimaryText"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

            <VideoView
                android:id="@+id/vv_video1"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_label1"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/tv_label2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_curso1"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintTop_toBottomOf="@+id/vv_video1"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

            <VideoView
                android:id="@+id/vv_video2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_label2"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/tv_label3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_curso2"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintTop_toBottomOf="@+id/vv_video2"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

            <VideoView
                android:id="@+id/vv_video3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_label3"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/tv_label4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_curso3"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintTop_toBottomOf="@+id/vv_video3"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

            <VideoView
                android:id="@+id/vv_video4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_label4"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/tv_label5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/video_curso4"
                android:textColor="@color/colorPrimaryText"
                app:layout_constraintTop_toBottomOf="@+id/vv_video4"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />

            <VideoView
                android:id="@+id/vv_video5"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_label5"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>