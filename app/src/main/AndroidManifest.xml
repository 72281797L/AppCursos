<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appcursos">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".actividades.UsuariosActivity"
            android:label="@string/lb_usuarios"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.appcursos.actividades.MenuActivity" />
        </activity>
        <activity android:name=".actividades.ProfesoresActivity"
            android:label="@string/lb_profesores"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.appcursos.actividades.MenuActivity" />
        </activity>
        <activity android:name=".actividades.AsignaturasActivity"
            android:label="@string/lb_asignaturas"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.appcursos.actividades.MenuActivity" />
        </activity>
        <activity android:name=".actividades.AlumnosActivity"
            android:label="@string/lb_alumnos"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.appcursos.actividades.MenuActivity" />
        </activity>
        <activity android:name=".actividades.CursosActivity"
            android:label="@string/lb_cursos"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.appcursos.actividades.MenuActivity" />
        </activity>
        <activity android:name=".actividades.MenuActivity"
            android:label="@string/lb_menu"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.appcursos.actividades.MainActivity" />
        </activity>
        <activity android:name=".actividades.RegistrarseActivity"
            android:label="@string/lb_registrarse"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.appcursos.actividades.MainActivity" />
        </activity>
        <activity android:name=".actividades.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>